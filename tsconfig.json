{
  "compilerOptions": {
    "incremental": true,
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "src",
    "test"
  ]
}
